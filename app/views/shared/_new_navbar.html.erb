        <i class="fa-solid fa-map" style="font-size: 1.5rem"></i>
        <p class="m-0" style="font-size: 0.625rem">Map</p>
      </div>
    <% end %>

    <div class="text-center text-warning" style="width: 5em">
      <i class="fa-solid fa-user" style="font-size: 1.5rem"></i>
      <p class="m-0" style="font-size: 0.625rem">Dashboard</p>
    </div>

  </div>
</div>

