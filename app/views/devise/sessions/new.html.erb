<div class="col-9 mx-auto d-flex flex-column justify-content-center homepage" style="height: 100vh">
  <div class="d-flex justify-content-around">
    <h1>WorldFlavors</h1>
  </div>
  <div class="mx-auto text-center mt-4">
    <h3>"Spice up your daily routine with a pinch of discovery!"</h3>
  </div>


  <% if user_signed_in? %>
    <h3 class="mx-auto text-center mt-5">Welcome back <%= current_user.username %> !</h3>
    <div class="mx-auto mt-4">
      <%= link_to recipes_path do%>
        <button class="btn bouton-login">Enter</button>
      <% end %>
    </div>
  <% else %>
    <div class="col-10 mx-auto mt-5">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"bouton-login d-flex mx-auto" %>
        </div>
      <% end %>

      <div class="d-block">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
